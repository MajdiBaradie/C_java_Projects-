 #include<iostream>  
#include<windows.h>  /* (Windows) مكتبة تحتوي  عددًا كبيرًا جدًا من وظائف 
C++ المحددة التي يمكن استخدامها في لغة 
في هذا المشروع استخدمناها لاستدعاء الوظيفة  
  sleep (time in millisecond) ;
*/
using namespace std;
int main()
{
	int hours, min, sec;      // تعريف المتغيرات المستخدمة في البرنامج
	cout << " Enter the hours ";
	cin >> hours;
	cout << " Enter the minutes ";
	cin >> min;
	cout << " Enter seconds \n ";
	cin >> sec;
	while (1)     // نريد من الساعة الاستمرار بالعد الى حين الخروج من البرنامج 
                  // لذلك ضعنا في الشرط رقم 1 اي سيتم التنفيذ الى مالانهايه
	{
		system("cls"); // استخدمنا هذا الامر لمسح محتويات  الشاشة لتجميل طريقه العرض 
		
        
        
        /* كيفية عمل الساعة 
    
    1-) الساعة تحتوي على ثلاث عناصراساسية (ساعات و دقائق و ثواني) 
    2-) القيم الابتدائية للعناصر يتم ادخالها من المستخدم       
     
    3-) الدقيقة تساوي 60 ثانية  اذا عندما يصبح عدد الثواني 59 سنزيد على الدقائق 1 ونرجع الثواني الى0
    
    4-) الساعة تساوي 60 دقيقة اذا عندما يصبح عدد الدقائق 59 سنزيد على الساعات  1 ونرجع الدقائق الى0
    
    5-) عندما تصبح الساعات 11:59 دقيقة يجب ان نعيد الساعات الى 1 و الثواني والدقائق الى 0
    
    6-) نحتاج الى مسح الشاشة بعد كل مره نطبع فيها لتحسين مظهر الشاشة 
       
         => الان تابع تسلسل الكود لتفهم بشكل اوضح <=

        */
        
        
        
        
        if (sec > 59)
		{
			min++;  // لزيادة 1 على الدقائق 
			sec = 0;  // لاعادة الثواني  الى 0
        }
       
        if (min > 59)         
		{
			hours++;  // لزيادة 1 على الساعات 
			min = 0;  // لاعادة الدقائق الى 0
		}
		

		if (hours > 12){
			hours = 1; 
             }
              

               
		cout << "\n -----------------------------------------------------------------------------\n";
		cout << " \t \t " << hours << " : " << min << " : " << sec << "\n";
		cout << "\n -----------------------------------------------------------------------------\n";
		sec++;  
		Sleep(900); //   تنفيذ البرنامج بعد 900 مللي ثانيه لان سرعة الكمبايلر في التنفيذ اسرع من الثانية الفعليه لزيادة الواقعية
    }
	return 0;
}  
